##init window (I think)
main = Tk(screenName="Space Traders")
main.geometry('600x400')
main.title("Space Traders")

json_data = {
}
##contracts data pull
def contracts_check():
    response = requests.get('https://api.spacetraders.io/v2/my/contracts/', headers=headers)
    print("Pull Contract Data\nStatus:", response.status_code)

    contracts = Tk(screenName="Contracts")
    contracts.geometry('600x400')
    contracts.title("Contracts")

    box1 = ttk.Label(contracts, text="Contracts Data")
    box1.pack()

    ##text dump field for contract data
    contract_data = Text(contracts, width=350, height= 500)
    contract_data.insert(END, response.text)
    contract_data.pack()
    contracts.mainloop()
##agent data pull
def agent_info():
    response = requests.get('https://api.spacetraders.io/v2/my/agent', headers=headers)
    print("Pull Agent Info\nStatus:",response.status_code)

    agent = Tk(screenName="Agent")
    agent.geometry('600x400')
    agent.title("Agent")

    box1 = ttk.Label(agent, text="Agent Data")
    box1.pack()

    agent_data = Text(agent, height=500, width = 350)
    agent_data.insert(END, response.text)
    agent_data.pack()

    agent.mainloop()
##button logic
check_contracts = ttk.Button(main, text="Check Contracts", command = contracts_check)
check_agent = ttk.Button(main, text="Agent Info", command = agent_info)
## pack the buttons
check_agent.pack()
check_contracts.pack()

main.mainloop()